<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sonatra_ajax.kernel_subscriber.class">Sonatra\Component\Ajax\EventSubscriber\AjaxSubscriber</parameter>
        <parameter key="sonatra_ajax.ajax_id" />
    </parameters>

    <services>
        <service id="sonatra_ajax.event_subscriber" class="%sonatra_ajax.kernel_subscriber.class%">
            <tag name="kernel.event_subscriber" />
            <argument>%sonatra_ajax.ajax_id%</argument>
        </service>
    </services>
</container>
